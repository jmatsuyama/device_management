@model IEnumerable<DeviceManagementSystem.Models.Device>

@{
    ViewData["Title"] = "端末一覧";
}

<div class="container">
    <h1 class="mb-4">端末一覧</h1>

    <div class="mb-3">
        <a asp-action="Create" class="btn btn-primary me-2">
            <i class="bi bi-plus-circle"></i> 新規登録
        </a>
        <a asp-action="ExportCsv" class="btn btn-success">
            <i class="bi bi-file-earmark-excel"></i> CSV出力
        </a>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-light">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Location)</th>
                    <th>@Html.DisplayNameFor(model => model.PcId)</th>
                    <th>@Html.DisplayNameFor(model => model.Status)</th>
                    <th>@Html.DisplayNameFor(model => model.ExpirationDate)</th>
                    <th>@Html.DisplayNameFor(model => model.IsFaultyReplacement)</th>
                    <th>操作</th>
                </tr>
            </thead>
            <tbody>
            @foreach (var item in Model) {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Location)</td>
                    <td>@Html.DisplayFor(modelItem => item.PcId)</td>
                    <td>
                        <span class="badge bg-@(item.Status switch {
                            DeviceStatus.準備中 => "secondary",
                            DeviceStatus.出荷待ち => "primary",
                            DeviceStatus.受取待ち => "warning",
                            DeviceStatus.受取済み => "success",
                            _ => "light"
                        })">
                            @Html.DisplayFor(modelItem => item.Status)
                        </span>
                    </td>
                    <td>@Html.DisplayFor(modelItem => item.ExpirationDate)</td>
                    <td>
                        @if (item.IsFaultyReplacement)
                        {
                            <span class="badge bg-danger">要交換</span>
                        }
                        else
                        {
                            <span class="badge bg-success">正常</span>
                        }
                    </td>
                    <td>
                        <div class="btn-group" role="group">
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-info me-1">
                                <i class="bi bi-pencil"></i> 編集
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">
                                <i class="bi bi-trash"></i> 削除
                            </a>
                        </div>
                    </td>
                </tr>
            }
    </tbody>
</table>